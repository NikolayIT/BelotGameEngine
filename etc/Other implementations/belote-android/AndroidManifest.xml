<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karamanov.beloteGame"
    android:installLocation="preferExternal"
    android:versionCode="33"
    android:versionName="1.33" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />
    <application
        android:name=".Belote"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/BeloteNoTitleTheme" >
        <activity
            android:name=".gui.screen.logo.LogoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.screen.main.BeloteActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" />
        <activity
            android:name=".gui.screen.tricks.TricksActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".gui.screen.gameResume.GameResumeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".gui.screen.score.ScoreActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".gui.screen.pref.BelotePreferencesActivity"
            android:label="@string/app_name" />
    </application>

</manifest>